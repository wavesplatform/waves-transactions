{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "typedocOptions": {
    "name": "waves-transactions",
    "mode": "modules",
    "out": "docs",
    "theme": "./node_modules/typedoc-clarity-theme",
    "ignoreCompilerErrors": true,
    "exclude": "**/validators/**",
    "excludePrivate": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "target": "ES6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs"
  },
  "types": ["node"]
}
